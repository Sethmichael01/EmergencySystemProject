@model MOBILE_BASED.ViewModels.CommunityVm

@{
    ViewData["Title"] = "Edit";
}
<section class="section contact" data-section="section6">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Community</h2>
                </div>
            </div>
            <div class="col-md-12">
                <form asp-action="AddOrUpdate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CommunityId" />
                    <div class="form-group">
                        <label asp-for="LocalGovernmentId" class="control-label text-white"></label>
                        <select asp-for="LocalGovernmentId" class="form-control" asp-items="ViewBag.LocalGovernmentId"></select>
                        <span asp-validation-for="LocalGovernmentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ZipCode" class="control-label text-white"></label>
                        <input asp-for="ZipCode" class="form-control" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CommunityName" class="control-label text-white"></label>
                        <input asp-for="CommunityName" class="form-control" />
                        <span asp-validation-for="CommunityName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary text-white" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
