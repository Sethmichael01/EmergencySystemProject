@model IEnumerable<MOBILE_BASED.ViewModels.EmergencyRequestVm>

@{
    ViewData["Title"] = "Index";
}


<div id="work_banner" class="banner-wrapper bg-light w-100 py-5">
    <div class="banner-vertical-center-work container text-light d-flex justify-content-center align-items-center py-5 p-0">
        <div class="banner-content col-lg-8 col-12 m-lg-auto text-center">
            <h1 class="banner-heading h2 display-3 pb-5 semi-bold-600 typo-space-line-center text-dark">Emergency Requests</h1>
            <a class="btn rounded-pill btn-secondary text-light px-4 light-300" asp-action="AddOrUpdate">Create New</a>

        </div>
    </div>
</div>
<section class="container py-5">
    <div class="row pb-4">
        <div class="col-lg-12 ">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Comment)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Longitude)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Latitude)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Altitude)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ArrivalTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RequestTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CompletedAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CitizenName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SectorName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StaffName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Longitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Latitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Altitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArrivalTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompletedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CitizenName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffName)
                        </td>
                        <td>
                            <a asp-action="AddOrUpdate" asp-route-id="@item.EmergencyRequestId">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.EmergencyRequestId">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

