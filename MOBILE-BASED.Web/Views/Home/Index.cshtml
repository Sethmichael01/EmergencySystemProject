@{
    ViewData["Title"] = "Home Page";
}
<!-- Slider main container -->
<div class="swiper-container main-slider" id="myCarousel">
    <div class="swiper-wrapper">
        <div class="swiper-slide slider-bg-position" style="background-color:#2E4042" @*style="background: url('https://image.freepik.com/free-vector/emergency-word-concept-background_23-2147957318.jpg') "*@ data-hash="slide1">
            <h2>HEALTH EMERGENCY <p>For Health emergency issues, <br />click the HEALTH ALARM button<br /></p><a class="banner-button btn rounded-pill btn-outline-primary btn-lg px-4" asp-action="AddOrUpdate" asp-controller="EmergencyRequests" role="button">HEALTH ALARM</a></h2>
        </div>
        <div class="swiper-slide slider-bg-position" style="background-color:#2E4042" @*style="background: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRMMGiw1_XYXpts0MDUUd9eO_HNOE6sCKR5zA&usqp=CAU')"*@ data-hash="slide2">
            <h2>FIRE ALARM <p>For Fire emergency issues, <br />click the FIRE ALARM button<br /></p><a class="banner-button btn rounded-pill btn-outline-primary btn-lg px-4" asp-action="AddOrUpdate" asp-controller="EmergencyRequests" role="button">FIRE ALARM</a></h2>
        </div>
    </div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>
    <!-- Add Navigation -->
    <div class="swiper-button-prev"><i class="fa fa-chevron-left"></i></div>
    <div class="swiper-button-next"><i class="fa fa-chevron-right"></i></div>
</div>