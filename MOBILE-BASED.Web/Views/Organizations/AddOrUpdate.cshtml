@model MOBILE_BASED.ViewModels.OrganizationVm

@{
    ViewData["Title"] = "Create";
}
<section class="section contact" data-section="section6">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Organization</h2>
                </div>
            </div>
            <div class="col-md-12">
                <form asp-action="AddOrUpdate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="OrganizationId" />
                    <div class="form-group">
                        <label asp-for="SectorId" class="control-label text-white"></label>
                        <select asp-for="SectorId" class="form-control" asp-items="ViewBag.SectorId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CommunityId" class="control-label text-white"></label>
                        <select asp-for="CommunityId" class="form-control" asp-items="ViewBag.CommunityId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrganizationName" class="control-label text-white"></label>
                        <input asp-for="OrganizationName" class="form-control" />
                        <span asp-validation-for="OrganizationName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegistrationNumber" class="control-label text-white"></label>
                        <input asp-for="RegistrationNumber" class="form-control" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label text-white"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary text-white" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
