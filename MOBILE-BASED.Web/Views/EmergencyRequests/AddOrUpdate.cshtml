@model MOBILE_BASED.ViewModels.EmergencyRequestVm

@{
    ViewData["Title"] = "Edit";
}
<section class="section contact" data-section="section6">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Emergency Request</h2>
                </div>
            </div>
            <div class="col-md-12">
                <form asp-action="AddOrUpdate" asp-controller="EmergencyRequests">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EmergencyRequestId" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label text-white"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label text-white"></label>
                        <input asp-for="Comment" class="form-control" />
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SectorId" class="control-label"></label>
                        <select asp-for="SectorId" class="form-control" asp-items="ViewBag.SectorId"></select>
                        <span asp-validation-for="SectorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary text-white" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
